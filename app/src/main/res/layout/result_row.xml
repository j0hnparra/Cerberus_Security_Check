<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/breachAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:textColor="#F44336"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/breachName"
        app:layout_constraintLeft_toRightOf="@id/breachLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Oh no! \nYour account has been exposed on\n500 different sites!" />

    <ImageView
        android:id="@+id/breachLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="16dp"
        android:src="@drawable/ic_insert_photo_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/breach_logo" />

    <TextView
        android:id="@+id/breachName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/breachDomain"
        app:layout_constraintLeft_toRightOf="@id/breachLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Breach Name" />

    <TextView
        android:id="@+id/breachDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/breachLogo"
        app:layout_constraintTop_toBottomOf="@+id/breachName"
        tools:text="www.example.com" />


    <TextView
        android:id="@+id/breachCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:textColor="#F44336"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/breachLogo"
        app:layout_constraintTop_toBottomOf="@+id/textView_Count"
        tools:text="1000" />

    <TextView
        android:id="@+id/breachDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/breachLogo"
        app:layout_constraintTop_toBottomOf="@+id/textVIew_Date"
        tools:text="01-01-20" />

    <TextView
        android:id="@+id/breachDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/breachLogo"
        app:layout_constraintTop_toBottomOf="@+id/breachDate"
        tools:text="Breach Description" />

    <TextView
        android:id="@+id/textView_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:text="@string/breach_count"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/breachLogo"
        app:layout_constraintTop_toBottomOf="@+id/breachDomain" />

    <TextView
        android:id="@+id/textVIew_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/breach_date"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/breachLogo"
        app:layout_constraintTop_toBottomOf="@+id/breachCount" />
</androidx.constraintlayout.widget.ConstraintLayout>